@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="row">
    <div class="col-md-6">
        <h3 class="text-danger">That's a @Model.HttpStatusCode!</h3>
        <p>Sorry about that.</p>
        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
    </div>
    <div class="col-md-6">
        <img src="https://http.cat/@Model.HttpStatusCode" class="img-fluid" />
    </div>
</div>

